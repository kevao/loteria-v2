<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="dev.loteria.gui.controllers.SorteioAnimationController"
  spacing="16" styleClass="sorteio-animation-root" alignment="CENTER"
  prefWidth="960" prefHeight="520" maxWidth="960" maxHeight="600">
  <VBox spacing="6" alignment="CENTER">
    <Label fx:id="lblModalidade" text="Modalidade" styleClass="sorteio-modalidade" />
    <Label fx:id="lblStatus" text="Preparando bolas..." styleClass="sorteio-status" />
  </VBox>
  <FlowPane fx:id="ballContainer" hgap="14" vgap="14" prefWrapLength="900" prefWidth="900"
    maxWidth="900"
    alignment="CENTER" styleClass="balls-container" />
  <HBox alignment="CENTER_RIGHT" spacing="10" maxWidth="Infinity">
    <Pane HBox.hgrow="ALWAYS" />
    <Button fx:id="btnFechar" text="Fechar" disable="true" />
  </HBox>
</VBox>