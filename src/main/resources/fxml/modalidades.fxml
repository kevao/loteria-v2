<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="dev.loteria.gui.controllers.ModalidadeController" spacing="10"
    styleClass="view-root" style="-fx-padding: 10;">
    <HBox alignment="CENTER_LEFT" spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="8">
            <SVGPath styleClass="view-icon"
                content="M3 3h4v4H3V3zm6 0h4v4H9V3zm6 0h4v4h-4V3zM3 9h4v4H3V9zm6 0h4v4H9V9zm6 0h4v4h-4V9zM3 15h4v4H3v-4zm6 0h4v4H9v-4zm6 0h4v4h-4v-4z" />
            <Label text="Modalidades" styleClass="view-title" />
        </HBox>
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="btnNew" text="Nova Modalidade" styleClass="primary-btn">
            <graphic>
                <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="#ffffff" />
            </graphic>
        </Button>
    </HBox>

    <TableView fx:id="tableModalidades" prefHeight="500" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNome" text="Nome" />
            <TableColumn fx:id="colValor" text="Preço" />
            <TableColumn fx:id="colNumeros" text="Bolas Sorteadas" />
            <TableColumn fx:id="colNumeracao" text="Numeração" />
            <TableColumn fx:id="colDescricao" text="Descrição" />
            <TableColumn fx:id="colAtivo" text="Ativo?" />
            <TableColumn fx:id="colActions" text="" />
        </columns>
    </TableView>
</VBox>