<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="dev.loteria.gui.controllers.SorteioController" spacing="10"
    styleClass="view-root" style="-fx-padding: 10;">
    <HBox alignment="CENTER_LEFT" spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="8">
            <SVGPath styleClass="view-icon"
                content="M3 3h18v2H3V3zm2 6h14v10H5V9zm3 2v6h2v-6H8zm4 0v6h2v-6h-2z" />
            <Label text="Sorteios" styleClass="view-title" />
        </HBox>
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="btnNovo" text="Novo Sorteio" styleClass="primary-btn">
            <graphic>
                <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="#fff" />
            </graphic>
        </Button>
    </HBox>

    <TableView fx:id="tableView" prefHeight="500" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colModalidade" text="Modalidade" />
            <TableColumn fx:id="colNumeros" text="Números" />
            <TableColumn fx:id="colHorario" text="Horário" />
            <TableColumn fx:id="colActions" text="" />
        </columns>
    </TableView>
</VBox>