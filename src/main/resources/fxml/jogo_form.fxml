<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="dev.loteria.gui.controllers.JogoFormController" spacing="8"
  style="-fx-padding: 12;"
  styleClass="view-root modal-surface">

  <GridPane hgap="8" vgap="8">
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <HBox spacing="12" GridPane.rowIndex="0" GridPane.columnIndex="0">
      <VBox spacing="4" HBox.hgrow="ALWAYS">
        <Label text="Modalidade" />
        <ComboBox fx:id="modalidadeCombo" promptText="Escolha a modalidade" />
      </VBox>

      <VBox spacing="4" HBox.hgrow="ALWAYS">
        <Label text="Cliente" />
        <ComboBox fx:id="clienteCombo" promptText="Escolha o cliente" />
      </VBox>
    </HBox>

    <HBox spacing="12" GridPane.rowIndex="1" GridPane.columnIndex="0">
      <VBox spacing="4" HBox.hgrow="ALWAYS">
        <Label text="Funcionário" />
        <ComboBox fx:id="funcionarioCombo" promptText="Escolha o funcionário" />
      </VBox>
    </HBox>

    <VBox spacing="4" GridPane.rowIndex="2" GridPane.columnIndex="0">
      <Label fx:id="lblInstrucaoNumeros" text="Selecione uma modalidade para ver os números" />
      <ScrollPane fitToWidth="true" prefHeight="200"
        style="-fx-background-color: transparent; -fx-background: transparent;">
        <FlowPane fx:id="numerosFlowPane" hgap="8" vgap="8" />
      </ScrollPane>
    </VBox>

  </GridPane>

  <Label fx:id="titleLabel" text="" styleClass="form-status" />

  <HBox spacing="8" alignment="CENTER_RIGHT">
    <Button fx:id="btnCancel" text="Cancelar" />
    <Button fx:id="btnSave" text="Salvar" />
  </HBox>
</VBox>