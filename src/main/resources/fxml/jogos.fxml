<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="dev.loteria.gui.controllers.JogoController" spacing="10"
  styleClass="view-root" style="-fx-padding: 10;">
  <HBox alignment="CENTER_LEFT" spacing="8">
    <HBox alignment="CENTER_LEFT" spacing="8">
      <SVGPath styleClass="view-icon"
        content="M3 5h18v14H3V5zm2 2v10h14V7H5zm2 2h3v3H7V9zm5 0h3v3h-3V9zm5 0h3v3h-3V9zm-10 5h3v3H7v-3zm5 0h3v3h-3v-3z" />
      <Label text="Jogos" styleClass="view-title" />
    </HBox>
    <Pane HBox.hgrow="ALWAYS" />
