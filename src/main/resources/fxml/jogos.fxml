      <graphic>
        <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="#fff" />
      </graphic>
    </Button>
  </HBox>

  <TableView fx:id="tableView" prefHeight="500" VBox.vgrow="ALWAYS">
    <columns>
      <TableColumn fx:id="colModalidade" text="Modalidade" />
      <TableColumn fx:id="colCliente" text="Cliente" />
      <TableColumn fx:id="colFuncionario" text="Funcionário" />
      <TableColumn fx:id="colNumeros" text="Números" />
      <TableColumn fx:id="colData" text="Data" />
      <TableColumn fx:id="colActions" text="" />
    </columns>
