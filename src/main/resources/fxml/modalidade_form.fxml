<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="dev.loteria.gui.controllers.ModalidadeFormController" spacing="8"
  style="-fx-padding: 12;"
  styleClass="view-root">
  <!-- O título da janela é definido pelo Stage; removido título duplicado aqui -->
  <GridPane hgap="8" vgap="8">
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <VBox spacing="4" GridPane.rowIndex="0" GridPane.columnIndex="0">
      <Label text="Nome" />
      <TextField fx:id="nomeField" maxWidth="Infinity" />
    </VBox>

    <HBox spacing="12" GridPane.rowIndex="1" GridPane.columnIndex="0">
      <VBox spacing="4" HBox.hgrow="ALWAYS" maxWidth="Infinity">
        <Label text="Valor do jogo" />
        <HBox spacing="4" alignment="CENTER_LEFT">
          <TextField fx:id="valorField" maxWidth="Infinity" text="0,00" />
        </HBox>
      </VBox>

      <VBox spacing="4" HBox.hgrow="ALWAYS" maxWidth="Infinity">
        <Label text="Bolas Sorteadas" />
        <TextField fx:id="numerosField" maxWidth="Infinity" promptText="6" />
      </VBox>

      <VBox spacing="4" HBox.hgrow="ALWAYS" maxWidth="Infinity">
        <Label text="Menor bola" />
        <TextField fx:id="menorField" maxWidth="Infinity" promptText="0" />
      </VBox>

      <VBox spacing="4" HBox.hgrow="ALWAYS" maxWidth="Infinity">
        <Label text="Maior bola" />
        <TextField fx:id="maiorField" maxWidth="Infinity" promptText="99" />
      </VBox>
    </HBox>

    <VBox spacing="4" GridPane.rowIndex="2" GridPane.columnIndex="0">
      <Label text="Descrição" />
      <TextArea fx:id="descricaoArea" prefRowCount="3" maxWidth="Infinity" />
    </VBox>
  </GridPane>

  <!-- Status label usado pelo controller para mensagens menores (vazio por padrão) -->
  <Label fx:id="titleLabel" text="" styleClass="form-status" />

  <HBox spacing="8" alignment="CENTER_RIGHT">
    <Button fx:id="btnCancel" text="Cancelar" />
    <Button fx:id="btnSave" text="Salvar" />
  </HBox>
</VBox>