<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="dev.loteria.ui.gui.controllers.ModalidadeController" spacing="10"
    styleClass="view-root" style="-fx-padding: 10;">
    <HBox alignment="CENTER_LEFT" spacing="8">
        <HBox alignment="CENTER_LEFT" spacing="8">
            <SVGPath content="M8,0 A8,8 0 1,0 8.001,0 Z" styleClass="view-icon" />
            <Label text="Modalidades" styleClass="view-title" />
        </HBox>
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="btnNew" text="Novo" styleClass="primary-btn" />
    </HBox>

    <TableView fx:id="tableModalidades" prefHeight="500" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNome" text="Nome" />
            <TableColumn fx:id="colValor" text="Preço" />
            <TableColumn fx:id="colNumeros" text="Bolas Sorteadas" />
            <TableColumn fx:id="colNumeracao" text="Numeração" />
            <TableColumn fx:id="colDescricao" text="Descrição" />
            <TableColumn fx:id="colActions" text="" />
        </columns>
    </TableView>
</VBox>